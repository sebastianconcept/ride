Class {
	#name : #CounterController,
	#superclass : #RideController,
	#category : #'Ride-Controllers'
}

{ #category : #actions }
CounterController >> decrement [

	model decrement
]

{ #category : #'rest-html' }
CounterController >> htmlOnGET [

	"Answers the HTML exclusive of this controller."

	^ (views at: #index)
		  value: { 
				  (#count -> model count asString).
				  (#userFirstName -> model userFirstName) } asDictionary
		  partials: { (#result -> (views at: #result)) } asDictionary
]

{ #category : #'rest-html' }
CounterController >> htmlOnPOST [

	self perform: self ajaxAction asSymbol.

	^ (views at: #result) value:
		  { (#count -> model count asString) } asDictionary
]

{ #category : #'rest-html' }
CounterController >> htmlPageOnGET [

	"Answers the HTML content generated by this controller, 
	enclosed within the application layout template."

	^ self applicationTemplate
		  value: { (#count -> model count asString) } asDictionary
		  partials: { 
				  (#main -> (views at: #index)).
				  (#result -> (views at: #result)) } asDictionary
]

{ #category : #actions }
CounterController >> increment [

	model increment
]
